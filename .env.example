# ============================================
# DOCKER COMPOSE - Infrastructure Services
# ============================================

# PostgreSQL - Order Service Database
POSTGRES_ORDER_USER=order_user
POSTGRES_ORDER_PASSWORD=order_pass
POSTGRES_ORDER_DB=order_db
POSTGRES_ORDER_PORT=5432

# PostgreSQL - Payment Service Database
POSTGRES_PAYMENT_USER=payment_user
POSTGRES_PAYMENT_PASSWORD=payment_pass
POSTGRES_PAYMENT_DB=payment_db
POSTGRES_PAYMENT_PORT=5433

# PostgreSQL - Inventory Service Database
POSTGRES_INVENTORY_USER=inventory_user
POSTGRES_INVENTORY_PASSWORD=inventory_pass
POSTGRES_INVENTORY_DB=inventory_db
POSTGRES_INVENTORY_PORT=5434

# RabbitMQ - Message Broker
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123
RABBITMQ_VHOST=/
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# Redis - Caching & Queue
REDIS_PORT=6379

# ============================================
# ORDER SERVICE
# ============================================
ORDER_SERVICE_PORT=3001
ORDER_SERVICE_NAME=order-service

# Database Connection (from Docker container)
ORDER_DATABASE_HOST=postgres-order
ORDER_DATABASE_PORT=5432
ORDER_DATABASE_USER=order_user
ORDER_DATABASE_PASSWORD=order_pass
ORDER_DATABASE_NAME=order_db
ORDER_DATABASE_URL=postgresql://order_user:order_pass@postgres-order:5432/order_db

# RabbitMQ Connection (from Docker container)
ORDER_RABBITMQ_URL=amqp://admin:admin123@rabbitmq:5672

# Redis Connection (from Docker container)
ORDER_REDIS_URL=redis://redis:6379

# ============================================
# PAYMENT SERVICE
# ============================================
PAYMENT_SERVICE_PORT=3002
PAYMENT_SERVICE_NAME=payment-service

# Database Connection (from Docker container)
PAYMENT_DATABASE_HOST=postgres-payment
PAYMENT_DATABASE_PORT=5432
PAYMENT_DATABASE_USER=payment_user
PAYMENT_DATABASE_PASSWORD=payment_pass
PAYMENT_DATABASE_NAME=payment_db
PAYMENT_DATABASE_URL=postgresql://payment_user:payment_pass@postgres-payment:5432/payment_db

# RabbitMQ Connection (from Docker container)
PAYMENT_RABBITMQ_URL=amqp://admin:admin123@rabbitmq:5672

# Redis Connection (from Docker container)
PAYMENT_REDIS_URL=redis://redis:6379

# ============================================
# INVENTORY SERVICE
# ============================================
INVENTORY_SERVICE_PORT=3003
INVENTORY_SERVICE_NAME=inventory-service

# Database Connection (from Docker container)
INVENTORY_DATABASE_HOST=postgres-inventory
INVENTORY_DATABASE_PORT=5432
INVENTORY_DATABASE_USER=inventory_user
INVENTORY_DATABASE_PASSWORD=inventory_pass
INVENTORY_DATABASE_NAME=inventory_db
INVENTORY_DATABASE_URL=postgresql://inventory_user:inventory_pass@postgres-inventory:5432/inventory_db

# RabbitMQ Connection (from Docker container)
INVENTORY_RABBITMQ_URL=amqp://admin:admin123@rabbitmq:5672

# Redis Connection (from Docker container)
INVENTORY_REDIS_URL=redis://redis:6379

# ============================================
# NOTIFICATION SERVICE (WebSocket Gateway)
# ============================================
NOTIFICATION_SERVICE_PORT=3004
NOTIFICATION_SERVICE_NAME=notification-service

# RabbitMQ Connection (from Docker container)
NOTIFICATION_RABBITMQ_URL=amqp://admin:admin123@rabbitmq:5672

# Redis Connection (from Docker container)
NOTIFICATION_REDIS_URL=redis://redis:6379

# WebSocket Configuration
NOTIFICATION_WS_PORT=3005
NOTIFICATION_CORS_ORIGIN=http://localhost:3000

# ============================================
# FRONTEND - Next.js Application
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3005

# WebSocket Connection (from host machine)
NEXT_PUBLIC_NOTIFICATION_WS_URL=ws://localhost:3005

# ============================================
# SHARED CONFIGURATION
# ============================================
NODE_ENV=development

# JWT Configuration (for future authentication)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Application Configuration
APP_NAME=EventFlow
APP_VERSION=1.0.0

# ============================================
# EXTERNAL CONNECTIONS (from Host Machine)
# Use these when connecting from your local machine (Next.js, etc.)
# ============================================

# Database URLs (from host)
DATABASE_ORDER_URL=postgresql://order_user:order_pass@localhost:5432/order_db
DATABASE_PAYMENT_URL=postgresql://payment_user:payment_pass@localhost:5433/payment_db
DATABASE_INVENTORY_URL=postgresql://inventory_user:inventory_pass@localhost:5434/inventory_db

# RabbitMQ URL (from host)
RABBITMQ_URL=amqp://admin:admin123@localhost:5672

# Redis URL (from host)
REDIS_URL=redis://localhost:6379
